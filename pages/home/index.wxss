.page {
  padding: 24rpx;
}

.title {
  font-size: 36rpx;
  font-weight: 600;
}

.subtitle {
  margin-top: 12rpx;
  color: #666;
  font-size: 26rpx;
}

.actions {
  margin-top: 32rpx;
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.action {
  width: 100%;
  border-radius: 12rpx;
  background: #ffffff;
  color: #333;
  border: 1rpx solid #e5e5e5;
}
