<view class="page">
  <text class="title">首页</text>
  <text class="subtitle">快速查看今日摘要</text>
  <view class="section">
    <text class="section-title">今日摘要（{{today}}）</text>
    <view class="card">
      <view class="list">
        <view class="list-item">
          <view class="list-item-main">
            <text class="list-item-title">健身记录</text>
            <text class="list-item-subtitle">今日是否记录</text>
          </view>
          <text class="list-item-meta">{{fitnessStatus}}</text>
        </view>
        <view class="list-item">
          <view class="list-item-main">
            <text class="list-item-title">身体数据</text>
            <text class="list-item-subtitle">今日是否记录</text>
          </view>
          <text class="list-item-meta">{{bodyStatus}}</text>
        </view>
      </view>
    </view>
  </view>
  <view class="actions">
    <van-button type="primary" block bind:click="goToLog">去记录</van-button>
    <van-button type="default" block bind:click="goToHistory">查看历史</van-button>
  </view>
</view>
