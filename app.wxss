page {
  background: #f8f8f8;
  color: #1f1f1f;
  font-family: -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto, "Helvetica Neue", Arial, "Noto Sans", "Apple Color Emoji", "Segoe UI Emoji", "Segoe UI Symbol", "Noto Color Emoji", sans-serif;
}

.page {
  padding: 24rpx;
}

.title {
  font-size: 36rpx;
  font-weight: 600;
}

.subtitle {
  margin-top: 12rpx;
  color: #666;
  font-size: 26rpx;
}

.section {
  margin-top: 32rpx;
}

.section-title {
  font-size: 28rpx;
  font-weight: 600;
  margin-bottom: 16rpx;
}

.card {
  background: #ffffff;
  border-radius: 16rpx;
  padding: 20rpx;
  box-shadow: 0 8rpx 24rpx rgba(0, 0, 0, 0.04);
}

.btn {
  width: 100%;
  border-radius: 12rpx;
  padding: 18rpx 20rpx;
  font-size: 28rpx;
  font-weight: 600;
  border: 1rpx solid transparent;
  box-sizing: border-box;
}

.btn--primary {
  background: #1f6feb;
  color: #ffffff;
}

.btn--ghost {
  background: #ffffff;
  color: #1f1f1f;
  border-color: #e5e5e5;
}

.btn + .btn {
  margin-top: 16rpx;
}

.form-item {
  margin-bottom: 20rpx;
}

.form-label {
  display: flex;
  align-items: center;
  gap: 8rpx;
  font-size: 26rpx;
  margin-bottom: 8rpx;
}

.required {
  color: #e23a3a;
  font-weight: 600;
}

.input,
.textarea {
  width: 100%;
  border: 1rpx solid #e5e5e5;
  border-radius: 12rpx;
  padding: 16rpx 18rpx;
  background: #ffffff;
  font-size: 26rpx;
  box-sizing: border-box;
}

.input--picker {
  display: flex;
  align-items: center;
  justify-content: space-between;
  color: #333;
}

.input-group {
  display: flex;
  align-items: center;
  gap: 12rpx;
}

.input-group .input {
  flex: 1;
}

.input-unit {
  color: #666;
  font-size: 24rpx;
}

.textarea {
  min-height: 140rpx;
}

.form-hint {
  margin-top: 8rpx;
  color: #888;
  font-size: 22rpx;
}

.list {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.list-item {
  background: #ffffff;
  border-radius: 14rpx;
  padding: 18rpx 20rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  box-shadow: 0 8rpx 20rpx rgba(0, 0, 0, 0.03);
}

.list-item-main {
  display: flex;
  flex-direction: column;
  gap: 6rpx;
}

.list-item-title {
  font-size: 28rpx;
  font-weight: 600;
}

.list-item-subtitle {
  font-size: 24rpx;
  color: #666;
}

.list-item-meta {
  font-size: 24rpx;
  color: #1f6feb;
}

.empty-state {
  background: #ffffff;
  border-radius: 16rpx;
  padding: 32rpx 24rpx;
  text-align: center;
  color: #666;
}

.empty-title {
  font-size: 28rpx;
  font-weight: 600;
  color: #1f1f1f;
}

.empty-desc {
  margin-top: 12rpx;
  font-size: 24rpx;
  color: #666;
}

.filter-row {
  display: flex;
  flex-wrap: wrap;
  gap: 12rpx;
}
